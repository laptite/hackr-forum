!!!
%html
  %head
    %title HackrForum
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    = render 'layouts/header'
    - if notice.present?
      %p.notice= notice
    - if alert.present?
      %p.alert= alert
    = yield
